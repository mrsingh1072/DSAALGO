{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "jspwTest.cpp",
                "-o",
                "jspwTest"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run program",
            "type": "shell",
            "command": "./jspwTest < input.txt > output.txt",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
